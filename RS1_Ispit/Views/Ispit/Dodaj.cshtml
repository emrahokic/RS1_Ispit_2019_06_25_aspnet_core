@model RS1_Ispit_asp.net_core.ViewModels.IspitDodajVM

@{
    ViewData["Title"] = "Dodaj";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h2>Predmet: @Model.NazivPredmeta</h2>
            <h2>Nastavnik: @Model.ImePrezimeNastavnik</h2>
            <h2>Godina: @Model.AkademskaGodina</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="AngazovanID" hidden="hidden"/>

            <div class="form-group">
                <label asp-for="DatumIspita" class="control-label"></label>
                <input asp-for="DatumIspita" class="form-control" />
                <span asp-validation-for="DatumIspita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Napomena" class="control-label"></label>
                <input asp-for="Napomena" class="form-control" />
                <span asp-validation-for="Napomena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Snimi</button>
            </div>
        </form>
    </div>
</div>


